@functions
{
    public string IsActive(string action, string controller)
    {
        string clase = "";

        if (ViewContext.RouteData.Values["action"].Equals(action)
            && ViewContext.RouteData.Values["controller"].Equals(controller))
        {
            clase = "active";
        }
        
        return clase;
    }
}

